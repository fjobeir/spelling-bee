{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"bracketSpacing": true,
	"jsxSingleQuote": false,
	"printWidth": 80,
	"useTabs": true,
	"endOfLine": "auto",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 200
			}
		}
	],
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
}